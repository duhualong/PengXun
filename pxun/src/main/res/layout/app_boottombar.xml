<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/translucent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <View style="@style/DivisionLine"
              android:background="#DDDDDD"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="2dp">

            <LinearLayout
                android:id="@+id/ll_main_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_main_home"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/tab_home_selector"/>

                <TextView
                    android:id="@+id/tv_main_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:text="首页"
                    android:textSize="12sp"
                    android:textColor="@color/tab_text_selector"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_main_find"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_main_find"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/tab_find_selector"/>

                <TextView
                    android:id="@+id/tv_main_find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:text="发现"
                    android:textSize="12sp"
                    android:textColor="@color/tab_text_selector"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/ll_main_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_main_message"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/tab_message_selector"/>

                <TextView
                    android:id="@+id/tv_main_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:text="消息"
                    android:textSize="12sp"
                    android:textColor="@color/tab_text_selector"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_main_mine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_main_mine"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/tab_mine_selector"/>

                <TextView
                    android:id="@+id/tv_main_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:text="我的"
                    android:textSize="12sp"
                    android:textColor="@color/tab_text_selector"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_main_create"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@drawable/tab_icon_create"/>

    </LinearLayout>

</RelativeLayout>